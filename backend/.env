# App Settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production
APP_NAME=Screenipy API
VERSION=1.0.0

# Database (SQLite for local development)
DATABASE_URL=sqlite:///./screenipy.db

# CORS Settings
ALLOWED_HOSTS=["http://localhost:3000", "http://localhost:5173", "http://127.0.0.1:3000", "http://127.0.0.1:5173"]

# External APIs
YAHOO_FINANCE_TIMEOUT=10
NSE_TIMEOUT=10

# ML Models and Data
MODEL_PATH=./models
CHROMADB_PATH=./chromadb_store

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Screening Settings
MAX_CONCURRENT_SCREENS=5
DEFAULT_CACHE_TTL=3600